{
  "name": "microfleet",
  "version": "19.1.7",
  "private": true,
  "scripts": {
    "semantic-release": "semantic-release",
    "prepare": "mdep install",
    "prebuild": "pnpm clean",
    "clean": "pnpm -r clean",
    "build": "pnpm tsc -b ./tsconfig.build.json",
    "pretest": "pnpm build",
    "test": "pnpm test -r --workspace-concurrency 1",
    "version": "rimraf ./ci/staged/*.json; pnpm --filter='./packages/*' exec -- pnpm release-it",
    "release-it": "release-it -c .release-it.root.cjs"
  },
  "devDependencies": {
    "@makeomatic/deploy": "^12.11.0",
    "@node-rs/xxhash-linux-arm64-musl": "^1.4.0",
    "@node-rs/xxhash-linux-x64-musl": "^1.4.0",
    "@release-it/conventional-changelog": "^4.3.0",
    "@swc/core": "^1.3.65",
    "@swc/core-linux-arm64-musl": "^1.3.65",
    "@swc/core-linux-x64-musl": "^1.3.65",
    "@swc/helpers": "^0.5.1",
    "conventional-changelog-angular": "^6.0.0",
    "glob": "^10.2.7",
    "js-yaml": "^4.1.0",
    "prepend-file": "^2.0.1",
    "release-it": "^16.0.0",
    "rimraf": "^5.0.1",
    "typescript": "~5.1.3"
  }
}
