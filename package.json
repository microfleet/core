{
  "name": "microfleet",
  "version": "17.0.0",
  "private": true,
  "scripts": {
    "semantic-release": "semantic-release",
    "prepare": "mdep install",
    "prebuild": "pnpm clean",
    "clean": "pnpm -r clean",
    "build": "pnpm tsc -b ./tsconfig.build.json",
    "pretest": "pnpm build",
    "test": "pnpm test -r --workspace-concurrency 1",
    "version": "pnpm --filter=./packages --workspace-concurrency=4 exec -- pnpm release-it"
  },
  "devDependencies": {
    "@makeomatic/deploy": "^12.3.0",
    "@release-it/conventional-changelog": "^4.1.0",
    "glob": "^7.2.0",
    "js-yaml": "^4.1.0",
    "prepend-file": "^2.0.1",
    "release-it": "^14.12.4",
    "typescript": "~4.5.5"
  }
}
