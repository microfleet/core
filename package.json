{
  "name": "microfleet",
  "version": "21.0.1",
  "private": true,
  "scripts": {
    "semantic-release": "semantic-release",
    "prepare": "mdep install",
    "prebuild": "pnpm clean",
    "clean": "pnpm -r clean",
    "build": "pnpm tsc -b ./tsconfig.build.json",
    "pretest": "pnpm build",
    "test": "pnpm test -r --workspace-concurrency 3",
    "version": "rimraf ./ci/staged/*.json; pnpm --filter='./packages/*' exec -- pnpm release-it",
    "release-it": "release-it -c .release-it.root.cjs"
  },
  "devDependencies": {
    "@esbuild/linux-arm64": "^0.20.2",
    "@makeomatic/deploy": "^13.0.7",
    "@release-it/conventional-changelog": "^4.3.0",
    "@types/node": "20.16.10",
    "conventional-changelog-angular": "^7.0.0",
    "debug": "^4.3.6",
    "esbuild": "^0.20.2",
    "glob": "^10.4.5",
    "js-yaml": "^4.1.0",
    "prepend-file": "^2.0.1",
    "release-it": "^14.14.3",
    "rimraf": "^5.0.9",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.3.3"
  }
}
