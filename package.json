{
  "name": "microfleet",
  "version": "23.0.0",
  "private": true,
  "scripts": {
    "semantic-release": "semantic-release",
    "prepare": "mdep install",
    "prebuild": "pnpm clean",
    "clean": "pnpm -r clean",
    "build": "pnpm tsc -b ./tsconfig.build.json",
    "pretest": "pnpm build",
    "test": "pnpm test -r --workspace-concurrency 3",
    "version": "rimraf ./ci/staged/*.json; pnpm --filter='./packages/*' exec -- pnpm release-it",
    "release-it": "release-it -c .release-it.root.cjs"
  },
  "devDependencies": {
    "@esbuild/linux-arm64": "^0.23.1",
    "@makeomatic/deploy": "^13.1.0",
    "@release-it/conventional-changelog": "^10.0.0",
    "@types/node": "22.13.4",
    "conventional-changelog-angular": "^8.0.0",
    "debug": "^4.4.0",
    "esbuild": "^0.23.1",
    "glob": "^11.0.1",
    "js-yaml": "^4.1.0",
    "prepend-file": "^2.0.1",
    "release-it": "^18.1.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.7.3"
  }
}
