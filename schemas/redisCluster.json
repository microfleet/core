{
  "id": "redisCluster",
  "type": "object",
  "required": [ "hosts" ],
  "properties": {
    "hosts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [ "host", "port" ],
        "properties": {
          "host": {
            "type": "string",
            "anyOf": [
              { "format": "hostname" },
              { "format": "ipv4" },
              { "format": "ipv6" }
            ]
          },
          "port": {
            "oneOf": [
              { "type": "integer" },
              { "type": "string" }
            ]
          }
        }
      }
    },
    "options": {
      "type": "object",
      "properties": {
        "redisOptions": {
          "type": "object",
          "properties": {
            "keyPrefix": {
              "type": "string"
            },
            "dropBufferSupport": {
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}
