{
  "$id": "amqp",
  "type": "object",
  "additionalProperties": false,
  "required": ["transport"],
  "properties": {
    "transport": {
      "type": "object",
      "required": ["connection"],
      "default": {},
      "properties": {
        "connection": {
          "type": "object",
          "required": ["host", "port"],
          "default": {},
          "properties": {
            "host": {
              "anyOf": [
                {
                  "type": "string",
                  "default": "rabbitmq"
                },
                {
                  "type": "array",
                  "items": { "type": "string" },
                  "minItems": 1
                },
                {
                  "type": "array",
                  "items": { "$ref": "#/definitions/connectionHostConfig" },
                  "minItems": 1
                }
              ]
            },
            "port": {
              "type": "integer",
              "default": 5672,
              "minimum": 0
            }
          }
        },
        "bindPersistantQueueToHeadersExchange": {
          "type": "boolean"
        },
        "queue": {
          "type": "string"
        },
        "neck": {
          "type": "integer",
          "minimum": 0
        },
        "timeout": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  },
  "definitions": {
    "connectionHostConfig": {
      "type": "object",
      "required": ["host", "port"],
      "default": {},
      "properties": {
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
