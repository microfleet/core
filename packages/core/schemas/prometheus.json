{
  "$id": "prometheus",
  "type": "object",
  "required": ["config"],
  "properties": {
    "config": {
      "type": "object",
      "required": ["port", "path", "host"],
      "properties": {
        "port": {
          "type": "number",
          "description": "prometheus metrics port",
          "default": 9102
        },
        "path": {
          "type": "string",
          "description": "prometheus metrics path",
          "default": "/metrics",
          "minLength": 1
        },
        "host": {
          "type": "string",
          "description": "prometheus listen host",
          "default": "localhost",
          "minLength": 1
        }
      }
    }
  }
}
