{
  "$id": "opentracing",
  "type": "object",
  "required": ["config"],
  "properties": {
    "config": {
      "type": "object",
      "required": ["serviceName"],
      "properties": {
        "disable": {
          "type": "boolean",
          "default": true
        },
        "serviceName": {
          "type": "string"
        },
        "reporter": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "logSpans": {
              "type": "boolean",
              "default": false
            },
            "flushIntervalMs": {
              "type": "number"
            },
            "agentHost": {
              "type": "string"
            },
            "agentPort": {
              "type": "number"
            }
          }
        },
        "sampler": {
          "type": "object",
          "required": ["type", "param"],
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "const",
                "probabilistic",
                "ratelimiting",
                "lowerbound",
                "remote"
              ],
              "default": "const"
            },
            "param": {
              "type": "number",
              "default": 1
            },
            "host": {
              "type": "string"
            },
            "port": {
              "type": "number"
            },
            "refreshIntervalMs": {
              "type": "number"
            }
          }
        }
      }
    },
    "options": {
      "type": "object",
      "description": "disable metrics for now",
      "not": {
        "required": ["metrics"]
      },
      "additionalProperties": false,
      "properties": {
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "metrics": {
          "type": "object",
          "description": "must be a metrics factory",
          "required": ["createCounter", "createTimer", "createGauge"]
        }
      },
      "default": {}
    }
  }
}
